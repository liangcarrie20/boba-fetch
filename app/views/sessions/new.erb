<div class="container">
    <div class="flash">
        <% if flash[:error] %>
        <%= flash[:error] %>
        <% end %>
    </div>
  <div>
    <h1>Log in to Boba Fetch</h1>
  </div>
  <div>
    <form action="/sessions" method="post">

      <input type="email" name="user[email]" placeholder="email" required>

      <input type="password" name="user[password]" placeholder="Password" required>

      <input type="submit" value="Go">
    </form>
  </div>
  <div id="site-welcome">
    <img src="/boba-fetch-welcome.png" alt="welcome-to-boba-fetch"/>
  </div>
</div>