<div class="container">
<div class="shop-info">
  <%= @shop.name %><br>
  <%= @shop.address %><br>
  <%= @shop.city %>, <%= @shop.state %> <%= @shop.zip %><br>
  <%= @reviews.count %> reviews<br>
</div>
  <% @reviews.each do |review| %>
  <% @shop_id = review.shop_id %>
  <% @shop_name = Shop.find(@shop_id).name %>
  <% @drink_id = review.drink_id %>
  <% @drink_name = Drink.find(@drink_id).name %>
  <% @user_id = review.user_id %>
  <% @user_username = User.find(@user_id).username %>
  <div class="index-review">
    <div class="drink-name"><%=@drink_name.capitalize %></div>
    <div class="drink-rating"> <%= review.rating %> stars</div>
    <div class="review-body"><%= review.body %></div>
    <div class="reviewer">by: <a href="/users/<%=@user_id%>"><%= @user_username %></a></div>
    <div class="timestamp">on: <%= review.updated_at %></div>
  </div>
  <% end %>
  <div class="container">
    <ul>
      <li><a href="/shops/<%= @shop.id %>/drinks/new">Add a drink for <%= @shop.name %></a></li>
      <li><a href="/shops/<%= @shop.id %>/reviews/new">Add a review for <%= @shop.name %></a></li>
    </ul>
  </div>
</div>