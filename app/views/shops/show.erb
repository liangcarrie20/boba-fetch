<div id="map"></div>
<div class="container">
    <%= @shop.name %>: <%= @reviews.count %> reviews<br>
  <div id="address">
    <%= @shop.address %><br>
    <%= @shop.city %>, <%= @shop.state %> <%= @shop.zip %>
  </div>
  <% @reviews.each do |review| %>
  <% @shop_id = review.shop_id %>
  <% @shop_name = Shop.find(@shop_id).name %>
  <% @drink_id = review.drink_id %>
  <% @drink_name = Drink.find(@drink_id).name %>
  <% @user_id = review.user_id %>
  <% @user_username = User.find(@user_id).username %>
  <p>Reviews:</p>
  <div class="index-review">
    <div class="timestamp">on: <%= review.updated_at %></div>
    <div class="reviewer"><a href="/users/<%=@user_id%>"><%= @user_username %></a> says:</div>
    <div class="drink-name"><%=@drink_name.capitalize %> is worth <%= review.rating %> stars!</div>
    <div class="review-body"><%= review.body %></div>
  </div>
  <% end %>
  <% if current_user %>
    <a href="/shops/<%= @shop.id %>/drinks/new">Add a drink</a></li>
      <a href="/shops/<%= @shop.id %>/reviews/new">Add a review</a></li>
</div>
<% else %>
<div class="container">
  <p>Log in to add shops, drinks, and reviews!</p>
  <% end %>
</div>