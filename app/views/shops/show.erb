<div class="shop-banner cap-letters">
  <h1><%= @shop.name %></h1>
  <% if @reviews.average("rating") == 5 %>
    <i class="star fa fa-star"></i>
    <i class="star fa fa-star"></i>
    <i class="star fa fa-star"></i>
    <i class="star fa fa-star"></i>
    <i class="star fa fa-star"></i>
  <% elsif @reviews.average("rating") < 5 && @reviews.average("rating") >= 4.5 %>
    <i class="star fa fa-star"></i>
    <i class="star fa fa-star"></i>
    <i class="star fa fa-star"></i>
    <i class="star fa fa-star"></i>
    <i class="star fa fa-star-half-o"></i>
  <% elsif @reviews.average("rating") < 4.5 && @reviews.average("rating") >= 4 %>
    <i class="star fa fa-star"></i>
    <i class="star fa fa-star"></i>
    <i class="star fa fa-star"></i>
    <i class="star fa fa-star"></i>
    <i class="star fa fa-star-o"></i>
  <% elsif @reviews.average("rating") < 4 && @reviews.average("rating") >= 3.5 %>
    <i class="star fa fa-star"></i>
    <i class="star fa fa-star"></i>
    <i class="star fa fa-star"></i>
    <i class="star fa fa-star-half-o"></i>
    <i class="star fa fa-star-o"></i>
  <% elsif @reviews.average("rating") < 3.5 && @reviews.average("rating") >= 3 %>
      <i class="star fa fa-star"></i>
      <i class="star fa fa-star"></i>
      <i class="star fa fa-star"></i>
      <i class="star fa fa-star-o"></i>
      <i class="star fa fa-star-o"></i>
  <% elsif @reviews.average("rating") < 3 && @reviews.average("rating") >= 2.5 %>
    <i class="star fa fa-star"></i>
    <i class="star fa fa-star"></i>
    <i class="star fa fa-star-half-o"></i>
    <i class="star fa fa-star-o"></i>
    <i class="star fa fa-star-o"></i>
  <% elsif @reviews.average("rating") < 2.5 && @reviews.average("rating") >= 2 %>
    <i class="star fa fa-star"></i>
    <i class="star fa fa-star"></i>
    <i class="star fa fa-star-o"></i>
    <i class="star fa fa-star-o"></i>
    <i class="star fa fa-star-o"></i>
  <% elsif shop.reviews.average("rating") < 2 && shop.reviews.average("rating") >= 1.5 %>
    <i class="star fa fa-star"></i>
    <i class="star fa fa-star-half-o"></i>
    <i class="star fa fa-star-o"></i>
    <i class="star fa fa-star-o"></i>
    <i class="star fa fa-star-o"></i>
  <% else %>
    <i class="star fa fa-star"></i>
  <% end %>

  <%= @reviews.count %> reviews<br>
  <%= @shop.address %> <%= @shop.city %>, <%= @shop.state %> <%= @shop.zip %>
</div>

<div class="google-maps span-3">
    <input id="address" type="hidden" value="<%= @shop.address %> <%= @shop.city %>, <%= @shop.state %> <%= @shop.zip %>">
  <div class="span-3" id="map"></div>
</div>

<div>
  <% if current_user %>
  <div id="add-drink"><a href="/shops/<%= @shop.id %>/drinks/new">Add a drink</a></div>
  <div id="add-review"><a href="/shops/<%= @shop.id %>/reviews/new">Add a review</a></div>
  <div id="view-drinks"><a href="/shops/<%= @shop.id %>/drinks">View <%=@shop.name%>'s drinks</a></div>
  <div id="drink-list"></div>
  <% else %>
  <p>Log in to add shops, drinks, and reviews!</p>
  <% end %>
</div>
<p>Reviews:</p>
<div class="review-list">
  <% @reviews.each do |review| %>
  <% @shop_id = review.shop_id %>
  <% @shop_name = Shop.find(@shop_id).name %>
  <% @drink_id = review.drink_id %>
  <% @drink_name = Drink.find(@drink_id).name %>
  <% @user_id = review.user_id %>
  <% @user_username = User.find(@user_id).username %>
  <div class="index-review">
    <div class="reviewer"><a href="/users/<%=@user_id%>"><%= @user_username %></a> says:</div>
    <div class="drink-name"><a href="/shops/<%= @shop_id %>/drinks/<%= @drink_id%>"><%=@drink_name.capitalize %></a> is worth <%= review.rating %> stars!</div>
    <div class="review-body"><%= review.body %></div>
    <div class="timestamp"><%= review.updated_at.month %>/<%= review.updated_at.day %>/<%= review.updated_at.year %></div>
  </div>
  <% end %>
</div>