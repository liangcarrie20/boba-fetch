<div class="container">
  <h1><%= @shop.name %>'s <%= @drink.name %> has an average rating of <%=@reviews.average("rating") %> with <%= @reviews.count %> reviews:</h1>

  <% @reviews.each do |review| %>
  <% @user_id = review.user_id %>
  <% @user_username = User.find(@user_id).username %>
  <div class="index-review">
    <div class="shop-name"><%= @shop.name %></div>
    <div class="drink-name"><%=@drink.name.capitalize %></div>
    <div class="drink-rating"> <%= review.rating %> stars</div>
    <div class="review-body"><%= review.body %></div>
    <div class="reviewer">by: <a href="/users/<%=@user_id%>"><%= @user_username %></a></div>
    <div class="timestamp">on: <%= review.updated_at %></div>
  </div>
  <% end %>
  <div class="links">
    <a href="/shops/<%=@shop.id%>">back to <%=@shop.name%></a>
  </div>
</div>