  <h1 class="cap-letters">Recent reviews</h1>
  <% @reviews.each do |review| %>
    <% if review.rating == 5 %>
      <i class="star fa fa-star"></i>
      <i class="star fa fa-star"></i>
      <i class="star fa fa-star"></i>
      <i class="star fa fa-star"></i>
      <i class="star fa fa-star"></i>
    <% elsif review.rating == 4 %>
      <i class="star fa fa-star"></i>
      <i class="star fa fa-star"></i>
      <i class="star fa fa-star"></i>
      <i class="star fa fa-star"></i>
      <i class="star fa fa-star-o"></i>
    <% elsif review.rating == 3 %>
      <i class="star fa fa-star"></i>
      <i class="star fa fa-star"></i>
      <i class="star fa fa-star"></i>
      <i class="star fa fa-star-o"></i>
      <i class="star fa fa-star-o"></i>
    <% elsif review.rating == 2 %>
      <i class="star fa fa-star"></i>
      <i class="star fa fa-star"></i>
      <i class="star fa fa-star-o"></i>
      <i class="star fa fa-star-o"></i>
      <i class="star fa fa-star-o"></i>
    <% else %>
      <i class="star fa fa-star"></i>
      <i class="star fa fa-star-o"></i>
      <i class="star fa fa-star-o"></i>
      <i class="star fa fa-star-o"></i>
      <i class="star fa fa-star-o"></i>
    <% end %>
    <a href="/shops/<%=review.shop_id%>/drinks/<%=review.drink_id%>"><%= review.drink.name %></a> | 
    <a href="/shops/<%=review.shop_id%>"><%= review.shop.name %></a><br>
    <%= review.body %><br>
    <a href="/users/<%=review.user_id%>"><%= review.user.username %></a> | 
    <%= review.updated_at.year %> <%= review.updated_at.strftime("%B") %> <%= review.updated_at.day %><br><br>
    </div>
  <% end %>